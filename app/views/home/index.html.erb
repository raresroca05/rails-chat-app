<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
  <!-- Hero Section -->
  <div class="container mx-auto px-4 py-16">
    <div class="text-center max-w-4xl mx-auto">
      <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
        Real-Time Chat Made Simple
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 mb-8">
        Connect instantly with friends and colleagues in our modern chat rooms. 
        Built with Rails 8 and powered by Turbo Streams - no WebSockets needed!
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <% if signed_in? %>
          <%= link_to "Enter Chat Rooms", chat_rooms_path, 
              class: "px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-lg transition duration-200 text-lg" %>
        <% else %>
          <%= link_to "Get Started", new_registration_path, 
              class: "px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-lg transition duration-200 text-lg" %>
          <%= link_to "Sign In", new_session_path, 
              class: "px-8 py-4 bg-white hover:bg-gray-100 text-gray-800 font-semibold rounded-lg shadow-lg transition duration-200 text-lg border border-gray-300" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <div class="container mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">Why Choose Rails Chat?</h2>
    
    <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      <!-- Feature 1 -->
      <div class="bg-white rounded-xl shadow-lg p-8 text-center">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-3">Lightning Fast</h3>
        <p class="text-gray-600">Real-time messaging powered by Turbo Streams. Messages appear instantly without page refreshes.</p>
      </div>

      <!-- Feature 2 -->
      <div class="bg-white rounded-xl shadow-lg p-8 text-center">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-3">Secure & Private</h3>
        <p class="text-gray-600">Your conversations are protected with secure authentication and session management.</p>
      </div>

      <!-- Feature 3 -->
      <div class="bg-white rounded-xl shadow-lg p-8 text-center">
        <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-3">Multiple Rooms</h3>
        <p class="text-gray-600">Create and join different chat rooms for various topics and conversations.</p>
      </div>
    </div>
  </div>

  <!-- Stats Section -->
  <% if @user_count > 0 %>
    <div class="bg-white py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto grid grid-cols-3 gap-8 text-center">
          <div>
            <div class="text-4xl font-bold text-blue-600 mb-2"><%= @user_count %></div>
            <div class="text-gray-600">Active Users</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-green-600 mb-2"><%= @room_count %></div>
            <div class="text-gray-600">Chat Rooms</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-purple-600 mb-2"><%= @message_count %></div>
            <div class="text-gray-600">Messages Sent</div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Tech Stack Section -->
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">Built with Modern Technology</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="bg-white rounded-lg shadow p-6">
          <h4 class="font-semibold text-gray-800">Rails 8.0.2</h4>
          <p class="text-sm text-gray-600 mt-1">Latest framework</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
          <h4 class="font-semibold text-gray-800">Turbo Streams</h4>
          <p class="text-sm text-gray-600 mt-1">Real-time updates</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
          <h4 class="font-semibold text-gray-800">TailwindCSS</h4>
          <p class="text-sm text-gray-600 mt-1">Modern styling</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
          <h4 class="font-semibold text-gray-800">PostgreSQL</h4>
          <p class="text-sm text-gray-600 mt-1">Reliable database</p>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="bg-blue-600 text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Start Chatting?</h2>
      <p class="text-xl mb-8">Join our community and experience real-time messaging without complexity.</p>
      <% if signed_in? %>
        <%= link_to "Go to Chat Rooms", chat_rooms_path, 
            class: "inline-block px-8 py-4 bg-white text-blue-600 font-semibold rounded-lg hover:bg-gray-100 transition duration-200 text-lg" %>
      <% else %>
        <%= link_to "Sign Up Now", new_registration_path, 
            class: "inline-block px-8 py-4 bg-white text-blue-600 font-semibold rounded-lg hover:bg-gray-100 transition duration-200 text-lg" %>
      <% end %>
    </div>
  </div>
</div>
<div class="mb-4 p-3 rounded-lg <%= message.user == current_user ? 'bg-blue-50 ml-8' : 'bg-gray-50 mr-8' %>" data-action="turbo:before-stream-render->chat-room#scrollToBottom">
  <div class="flex justify-between items-start">
    <div class="font-medium text-gray-900"><%= message.user.display_name %></div>
    <div class="text-xs text-gray-500"><%= message.created_at.strftime("%m/%d %I:%M %p") %></div>
  </div>
  <div class="mt-1 text-gray-700"><%= message.content %></div>
</div>